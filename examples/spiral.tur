def loop(len: Int): Unit {
    if (len < 200) {
        if (len < 100) {
            changeColor(red)
        } else {
            if (len < 150) {
                changeColor(green)
            } else {
                changeColor(blue)
            }
        };
        forward(len);
        right(60);
        loop(len + 10)
    } else {
        ()
    }
}

loop(20)
